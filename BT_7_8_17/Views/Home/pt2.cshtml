@{
    ViewData["Title"] = "Giải phương trình bậc hai";
}

<form action="" method="POST">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                     <a title="Quay lại trang chủ" href="/" class="pull-left">
                        <span style="font-size:30px;margin-top:15px;" class="glyphicon glyphicon-arrow-left"></span>
                    </a>
                    <h3 style="text-tranform:upper" class="text-center">
                        <b>2. Giải phương trình bậc 2</b>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="form-group"> 
                        <div class="col-md-2">
                            <div class="input-group">
                                <input type="text" class="form-control" id="a" aria-describedby="basic-addon2">
                                <span class="input-group-addon" id="basic-addon2"><b>X<sup>2</sup></b></span>
                            </div>
                        </div>
                        <span style="margin-left:-5px;position:fixed;margin-top:3px;font-size:20px;font-weight:bold">+</span>
                        <div class="col-md-2">
                            <div class="input-group">
                                <input type="text" class="form-control" id="b" aria-describedby="basic-addon2">
                                <span class="input-group-addon" id="basic-addon2"><b>X</b></span>
                            </div>
                        </div>
                        <span style="margin-left:-5px;position:fixed;margin-top:3px;font-size:20px;font-weight:bold">+</span>
                        <div class="col-md-2">
                            <input type="text" class="form-control" id="c">
                        </div>
                        <div class="col-md-2"style="padding-top:4px;">
                            <b style="font-size:20px"> = 0</b>
                        </div>
                    </div><br><br>
                    <div class="form-group">
                        <a href="#" id="btn_Giai" class="btn btn-primary">Giải</a>
                    </div>
                    <div class="form-group">
                       </hr>
                       <h4 id="kq"></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <script>
            $(function(){
                $("#btn_Giai").off('click').on('click',function(e){
                    e.preventDefault();

                    var a = $("#a").val();
                    var b = $("#b").val();
                    var c = $("#c").val();

                    $.post('/Home/giaipt2_ajax',
                    {a:parseFloat(a),b:parseFloat(b),c:parseFloat(c)}
                    ,function(data,status){
                        if(data !=""){
                            $('#kq').html(data);
                        }
                    });
                });
            });
        </script>
    }
</form>
