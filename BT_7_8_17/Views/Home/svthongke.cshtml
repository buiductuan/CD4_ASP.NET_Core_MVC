@{
    ViewData["Title"] = "Read all student in file text";
    int index = 0;
    List<sv_diemdanh.Models.sv_diemdanh_class> list = (List<sv_diemdanh.Models.sv_diemdanh_class>)ViewData["lst_sv_diemdanh"];
}

<form action="" method="POST">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                     <a title="Quay lại trang chủ" href="/" class="pull-left">
                        <span style="font-size:30px;margin-top:15px;" class="glyphicon glyphicon-arrow-left"></span>
                    </a>
                    <h3 style="text-tranform:upper" class="text-center">
                        <b> Bảng thống kê điểm danh</b>
                    </h3>
                </div>
                <div class="panel-body">
                    <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <th>Mã sinh viên</th>
                            <th>Họ và tên</th>
                            <th>Ngày điểm danh</th>
                            <th>Trạng thái</th>
                            <th>Ghi chú</th>
                        </thead>
                        <tbody>
                            @foreach(var item in list)
                            {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@item.name</td>
                                    <td>@item.date</td>
                                    <td>@(item.status == "1" ? "+":"K")</td>
                                    <td>@item.note</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
